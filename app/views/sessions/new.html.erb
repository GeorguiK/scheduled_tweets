<h1>Login</h1>

<%= form_with url: login_path, data: { turbo: false} do |form| %>
    <% if @user%>
        <% if @user.errors.any? %>
            <div class="alert alert-danger">
                <% @user.errors.full_messages.each do |message| %>
                    <div>
                        <%= message %>
                    </div>
                <% end %>
            </div>
        <% end %>
    <%end%>
    <div class = "mb-3">
        <%= form.label :email, "Email" %>
        <%= form.text_field :email, class:"form-control", placeholder:"test@test.com"%>
    </div>
    <div class = "mb-3">
        <%= form.label :password, "Password" %>
        <%= form.password_field :password, class:"form-control", placeholder:"password" %>
        <%= link_to "Forgot Password?", password_reset_path %>
    </div>

    <div class="mb-3">
        <%= form.submit "Login"%>
    </div>

<% end %>