<h1>Forgot Password?</h1>

<%= form_with model: Current.user, url: password_reset_path,  data: { turbo: false} do |form| %>
    <div class = "mb-3">
        <%= form.label :email, "Email" %>
        <%= form.text_field :email, class:"form-control", placeholder:"test@test.com"%>
    </div>

    <div class="mb-3">
        <%= form.submit "Send Email"%>
    </div>
<%end%>